{
  "name": "create-nuxt-app-for-monopepo",
  "description": "Create monorepo template for Nuxt app",
  "version": "0.1.0",
  "private": true,
  "license": "MIT",
  "author": "shinGangan",
  "repository": {
    "type": "git",
    "url": "https://github.com/Shimpei-GANGAN/create-nuxt-app-for-monopepo"
  },
  "type": "module",
  "packageManager": "pnpm@8.15.3",
  "engines": {
    "node": "^20.11.1",
    "pnpm": "^8.15.3"
  },
  "scripts": {
    "cleanup": "rimraf node_modules src/node_modules",
    "clean": "rimraf src/.nuxt src/.output",
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "sb": "storybook dev --port 6006 -c ../configs/storybook",
    "sb:build": "storybook build -c ../configs/storybook",
    "lint": "run-s -c lint:*",
    "lint:eslint": "eslint .",
    "lint:tsc": "tsc --noEmit",
    "lint:prettier": "prettier --check .",
    "test:ut": "vitest -c configs/test/vitest.config.ts",
    "test:ut:coverage": "vitest run -c configs/test/vitest.config.ts --coverage",
    "gen:cm": "npx nuxi@3.10.0 add component $name",
    "gen:cmb": "npx nuxi@3.10.0 add composable $name",
    "gen:page": "npx nuxi@3.10.0 add page $name"
  },
  "devDependencies": {
    "@nuxt/test-utils": "^3.11.0",
    "@nuxtjs/i18n": "^8.1.1",
    "@nuxtjs/storybook": "7.0.0",
    "@storybook-vue/nuxt": "0.2.2",
    "@storybook/addon-a11y": "^7.6.16",
    "@storybook/addon-essentials": "7.6.16",
    "@storybook/addon-interactions": "7.6.16",
    "@storybook/addon-links": "7.6.16",
    "@storybook/blocks": "7.6.16",
    "@storybook/builder-vite": "7.6.16",
    "@storybook/testing-library": "^0.2.2",
    "@storybook/vue3": "7.6.16",
    "@types/node": "^20.11.19",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitest/coverage-v8": "^1.3.1",
    "@vue/test-utils": "^2.4.4",
    "eslint": "^8.56.0",
    "eslint-config-eslint": "^9.0.0",
    "eslint-config-prettier": "^9.1.0",
    "globals": "^14.0.0",
    "happy-dom": "^13.3.8",
    "npm-run-all2": "^6.1.2",
    "nuxt": "^3.10.3",
    "playwright-core": "^1.41.2",
    "prettier": "^3.2.5",
    "prettier-plugin-organize-imports": "^3.2.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^5.0.5",
    "storybook": "7.6.16",
    "typescript": "^5.3.3",
    "vitest": "^1.3.1",
    "vue": "^3.4.19",
    "vue-router": "^4.2.5"
  }
}
